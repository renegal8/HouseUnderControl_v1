<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/nombre"
            android:id="@+id/nombreTV"
            android:layout_x="15dp"
            android:layout_y="22dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/nombreValueET"
        android:layout_x="127dp"
        android:layout_y="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Direccion:"
        android:id="@+id/textView"
        android:layout_x="15dp"
        android:layout_y="71dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/addressET"
        android:layout_x="122dp"
        android:layout_y="69dp" />

        <TextView
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/cantCuartosValueTV"
            android:layout_marginLeft="30dp"
            android:layout_x="239dp"
            android:layout_y="107dp" />

    <ListView
        android:layout_width="140dp"
        android:layout_height="103dp"
        android:id="@+id/cuartosLV"
        android:layout_x="100dp"
        android:layout_y="145dp"/>

    <ImageView
        android:layout_width="161dp"
        android:layout_height="161dp"
        android:id="@+id/casaIV"
        android:layout_x="100dp"
        android:layout_y="259dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guardar"
        android:id="@+id/botonGuardar"
        android:layout_x="83dp"
        android:layout_y="439dp"
        android:layout_marginLeft="75dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/cantidad"
        android:id="@+id/cantCuartosTV"
        android:layout_x="15dp"
        android:layout_y="107dp" />


</AbsoluteLayout>